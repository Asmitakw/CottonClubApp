<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.cottonclub.custom_views.CustomTextView
            style="@style/CustomMediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/date_time_of_generation_job_card" />

        <com.cottonclub.custom_views.CustomTextView
            android:id="@+id/tvDateOrderCreation"
            style="@style/CustomMediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_calendar"
            android:text="20th July 2020"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_tag" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etBrandName"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableEnd="@drawable/ic_drop_down"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/select_brand"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_design" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etDesignNumber"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/design_number"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_quantity" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etQuantity"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/quantity"
                android:inputType="number"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_job_card" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etJobCardNumber"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/job_card_number"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_sizes" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etSelectSize"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableEnd="@drawable/ic_drop_down"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/select_size"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_fabric_type" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etFabricType"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/fabric_type"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_fabric_consumed" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etFabricConsumed"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/fabric_consumed"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_master" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etMasterName"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/master_name"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_delivery_date" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etCuttingIssueDate"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableEnd="@drawable/ic_calendar"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/cutting_issue_date"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <com.cottonclub.custom_views.CustomButtonRegular
            android:id="@+id/btnCreateJobCard"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_forty"
            android:background="@drawable/rounded_button"
            android:text="@string/create_job_card"
            android:textAllCaps="true"
            android:textSize="20sp" />

    </LinearLayout>


</ScrollView>