<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/extra_large_icon"
            android:layout_height="@dimen/extra_large_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_fabric_type" />

        <com.cottonclub.custom_views.CustomTextView
            style="@style/CustomLargeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.cottonclub.custom_views.CustomTextView
                android:id="@+id/etUserId"
                style="@style/EditText"
                android:background="@drawable/rounded_border"
                android:layout_marginLeft="@dimen/small_icon"
                android:layout_marginRight="@dimen/small_icon"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="@string/please_enter_user_id"
                android:singleLine="true"
                android:inputType="phone"
                android:maxLength="10"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <com.cottonclub.custom_views.CustomButtonRegular
            android:id="@+id/btnLogin"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="@string/login"
            android:textSize="20sp"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>