<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.cottonclub.custom_views.CustomTextView
            style="@style/CustomMediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/date_time_of_generation_job_card" />

        <com.cottonclub.custom_views.CustomTextView
            android:id="@+id/tvDateOrderCreation"
            style="@style/CustomMediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_calendar"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_tag" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etBrandName"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableEnd="@drawable/ic_drop_down"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/select_brand"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_job_card" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etJobCardNumber"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/job_card_number"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etDesignCode"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_design"
                android:drawableEnd="@drawable/ic_drop_down"
                android:drawablePadding="@dimen/dimen_15"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/design_code"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etDesignNumber"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_number"
                android:drawablePadding="@dimen/dimen_10"
                android:hint="@string/design_number"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_quantity" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etQuantity"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/quantity"
                android:inputType="number"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_sizes" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etSelectSize"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/select_size"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <!--Kids Magic MN-->
        <include layout="@layout/kids_magic_mn" />

        <include layout="@layout/kids_magic_numeric" />

        <include layout="@layout/kids_magic_gt" />

        <!--KMSB Boys-->
        <include layout="@layout/kmsb_boys" />

        <!--KMSB Girls-->
        <include layout="@layout/kmsb_girls" />

        <!--Bbaby S3XL-->
        <include layout="@layout/be_baby_s3xl" />

        <!--BbabyNB912-->
        <include layout="@layout/be_baby_nb_9_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etTotalNumberPieces"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_total_no_pieces"
                android:drawablePadding="@dimen/dimen_15"
                android:hint="@string/tot_no_pieces"
                android:inputType="number"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_fabric_consumed" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etFabricType"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableEnd="@drawable/ic_drop_down"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/fabric_type"
                android:textCursorDrawable="@drawable/cursor_drawable" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <com.cottonclub.custom_views.CustomEditViewRegular
            android:id="@+id/etCuttingIssueDate"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_delivery_date"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="@dimen/dimen_15"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/cutting_issue_date"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_drawable" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <com.cottonclub.custom_views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_15"
            android:drawableLeft="@drawable/ic_job_card"
            android:drawablePadding="@dimen/dimen_15"
            android:text="@string/upload_photo"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/dimen_18" />

        <LinearLayout
            android:id="@+id/llFileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivCancelFile"
                android:layout_width="@dimen/dimen_forty"
                android:layout_height="@dimen/dimen_forty"
                android:layout_gravity="end"
                android:src="@drawable/ic_cancel"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivJobCardFile"
                android:layout_width="@dimen/dimen_300"
                android:layout_height="@dimen/dimen_300"
                android:layout_gravity="center" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivUploadFile"
            android:layout_width="@dimen/dimen_eighty"
            android:layout_height="@dimen/dimen_eighty"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:drawableEnd="@drawable/ic_calendar"
            android:src="@drawable/ic_upload"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:visibility="visible" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <com.cottonclub.custom_views.CustomEditViewRegular
            android:id="@+id/etMasterName"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_master"
            android:drawablePadding="@dimen/dimen_15"
            android:hint="@string/master_name"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_drawable" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <com.cottonclub.custom_views.CustomEditViewRegular
            android:id="@+id/etCuttingCompleteDate"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_delivery_date"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="@dimen/dimen_15"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/cutting_complete_date"
            android:textCursorDrawable="@drawable/cursor_drawable" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <com.cottonclub.custom_views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:drawablePadding="@dimen/dimen_15"
            android:text="@string/fabric_consumed_"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/dimen_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etFabricItem"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:drawableStart="@drawable/ic_list"
                android:drawablePadding="@dimen/dimen_15"
                android:hint="@string/fabric_code"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.cottonclub.custom_views.CustomEditViewRegular
                    android:id="@+id/etFabricQuantity"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_quantity"
                    android:drawablePadding="@dimen/dimen_10"
                    android:hint="@string/quantity"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    tools:ignore="NestedWeights" />

                <com.cottonclub.custom_views.CustomEditViewRegular
                    android:id="@+id/etFabricCodeUnit"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:clickable="false"
                    android:drawableStart="@drawable/ic_kgs"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawablePadding="@dimen/dimen_10"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:text="@string/kgs"
                    android:textCursorDrawable="@drawable/cursor_drawable" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:id="@+id/llWastageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etWastage"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_wastage"
                android:drawablePadding="@dimen/dimen_15"
                android:hint="@string/wastage"
                android:inputType="number"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_drawable" />

            <com.cottonclub.custom_views.CustomEditViewRegular
                android:id="@+id/etWastageUnit"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_kgs"
                android:drawableEnd="@drawable/ic_drop_down"
                android:drawablePadding="@dimen/dimen_10"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:text="@string/kgs"
                android:textCursorDrawable="@drawable/cursor_drawable" />

        </LinearLayout>

        <View
            android:id="@+id/viewWastage"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFabricItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.cottonclub.custom_views.CustomButtonRegular
            android:id="@+id/btnAddItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_forty"
            android:background="@drawable/rounded_button_light"
            android:text="@string/add_item"
            android:textColor="@color/colorWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreyDark" />

        <LinearLayout
            android:id="@+id/llTotalQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <com.cottonclub.custom_views.CustomTextView
                android:id="@+id/tvTotalFabricConsumed"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_total_fabric_consumed"
                android:drawablePadding="@dimen/dimen_15"
                android:hint="@string/total_fabric_consumed"
                android:textCursorDrawable="@drawable/cursor_drawable" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/colorGreyDark" />

            <com.cottonclub.custom_views.CustomTextView
                android:id="@+id/tvTotalWastage"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_total_wastage"
                android:drawablePadding="@dimen/dimen_15"
                android:hint="@string/total_wastage"
                android:textCursorDrawable="@drawable/cursor_drawable" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/colorGreyDark" />

        </LinearLayout>

        <com.cottonclub.custom_views.CustomButtonRegular
            android:id="@+id/btnCreateJobCard"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_forty"
            android:background="@drawable/rounded_button"
            android:text="@string/update_job_Card"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:visibility="visible" />

    </LinearLayout>


</ScrollView>